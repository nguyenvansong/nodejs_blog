<div class="mt-4">
    <h3>Cập nhật khóa học</h3>
    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
        <label for="name">Tên khóa học:</label>
        <input name="name" type="text" class="form-control" value="{{course.name}}"  id="name" >
    </div>

    <div class="form-group">
        <label for="image">Ảnh mô tả:</label>
        <input name="image" type="text" class="form-control" value="{{course.image}}" id="image" >
    </div>

    <div class="form-group">
        <label for="description">Mô tả:</label>
        <textarea name="description" class="form-control" id="description">{{course.description}}</textarea>
    </div>

    <div class="form-group">
        <label for="videoId">Video:</label>
        <input name="videoId" type="text" class="form-control" value="{{course.videoId}}" id="videoId" >
    </div>

    <div class="form-group">
        <label for="level">Trình độ:</label>
        <input name="level" type="text" class="form-control" value="{{course.level}}" id="level" >
    </div>
    <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>