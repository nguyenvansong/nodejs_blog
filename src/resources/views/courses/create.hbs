<div class="mt-4">
    <h3>Đăng khóa học</h3>
    <form method="POST" action="/courses/store">
    <div class="form-group">
        <label for="name">Tên khóa học:</label>
        <input name="name" type="text" class="form-control" id="name" >
    </div>

    <div class="form-group">
        <label for="image">Ảnh mô tả:</label>
        <input name="image" type="text" class="form-control" id="image" >
    </div>

    <div class="form-group">
        <label for="description">Mô tả:</label>
        <input name="description" type="text" class="form-control" id="description" >
    </div>

    <div class="form-group">
        <label for="videoId">Video:</label>
        <input name="videoId" type="text" class="form-control" id="videoId" >
    </div>

    <div class="form-group">
        <label for="level">Trình độ:</label>
        <input name="level" type="text" class="form-control" id="level" >
    </div>
    <button type="submit" class="btn btn-primary">Thêm khóa học</button>
    </form>
</div>